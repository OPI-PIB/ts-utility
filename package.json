{
	"name": "@opi_pib/ts-utility",
	"version": "2.3.1",
	"description": "Typescript utility",
	"scripts": {
		"prepare": "husky",
		"clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
		"build:cjs": "tsc --module CommonJS --outDir dist/cjs",
		"build:esm": "tsc --module ESNext --outDir dist/esm --declaration true --declarationDir dist/types",
		"build": "npm run clean && npm run build:cjs && npm run build:esm",
		"test": "vitest run",
		"test:stryker": "stryker run"
	},
	"type": "module",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		}
	},
	"sideEffects": false,
	"files": [
		"dist",
		"LICENSE.md",
		"README.md"
	],
	"engines": {
		"node": ">=24.0.0",
		"npm": ">=10.8.0"
	},
	"lint-staged": {
		"*.{js,mjs,ts}": "eslint --fix",
		"*": "prettier -u -w"
	},
	"prettier": "@opi_pib/prettier-config-base",
	"keywords": [
		"utility",
		"helpers",
		"ddd",
		"value object",
		"entity",
		"type maybe"
	],
	"author": "Dawid Lubowiecki",
	"license": "MIT",
	"dependencies": {
		"ramda": "^0.31.0",
		"typescript": "^5.0.0"
	},
	"devDependencies": {
		"@opi_pib/eslint-config-base": "^9.0.0",
		"@opi_pib/prettier-config-base": "^1.0.0",
		"@stryker-mutator/core": "^9.0.0",
		"@stryker-mutator/vitest-runner": "^9.0.0",
		"@types/node": "^24.0.0",
		"@types/ramda": "^0.30.0",
		"husky": "^9.0.0",
		"jsdom": "^27.0.0",
		"lint-staged": "^16.0.0",
		"tsx": "^4.0.0",
		"vitest": "^4.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/OPI-PIB/ts-utility.git"
	}
}
