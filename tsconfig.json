{
	"compilerOptions": {
		"incremental": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"strict": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"stripInternal": true,
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"baseUrl": ".",
		"declaration": false
	},
	"exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
